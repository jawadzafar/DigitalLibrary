@model DigitalLibrary.Models.Publisher


@using DigitalLibrary.Models
@{
    Users user = Session["User"] as Users;
    if (user.Role == "admin")
    {
        Layout = "~/Views/Shared/_AdminDashboardPartial.cshtml";
    }
    else if (user.Role == "manager")
    {
        Layout = "~/Views/Shared/_ManagerDashoardPartial.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<h2>Details</h2>

<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="from-control"> Publisher Name</label>
        </dt>

        <dd>
            <input name="Name" type="text" readonly="readonly" value="@Model.Name" class="form-control" />
        </dd>

        <dt>
            <label class="from-control"> Publisher Address</label>
        </dt>

        <dd>
            <input name="Address" type="text" readonly="readonly" value="@Model.Address" class="form-control" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
