@model DigitalLibrary.Models.Publisher

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="from-control"> Publisher Name</label>
        </dt>

        <dd>
            <input name="Name" type="text" readonly="readonly" value="@Model.Name" class="form-control" />
        </dd>

        <dt>
            <label class="from-control"> Publisher Address</label>
        </dt>

        <dd>
            <input name="Address" type="text" readonly="readonly" value="@Model.Address" class="form-control" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
