@model  DigitalLibrary.Models.Page


@using DigitalLibrary.Models
@{
    Users user = Session["User"] as Users;
    if (user.Role == "admin")
    {
        Layout = "~/Views/Shared/_AdminDashboardPartial.cshtml";
    }
    else if (user.Role == "manager")
    {
        Layout = "~/Views/Shared/_ManagerDashoardPartial.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<h2>Update Pages</h2>


@using (Html.BeginForm("Edit", "Pages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    
            <hr />
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label name="" class="col-md-2 control-label">Baab Name</label>
                <div class="col-md-10">
                    <input name="BaabId" type="text" value="@Model.BaabId" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Book Name</label>
                <div class="col-md-10">
                    <input name="BookId" type="text" value="@Model.BookId" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Page Details</label>
                <div class="col-md-10">
                    <textarea name="PageDetails" type="text" maxlength="100" rows="10" cols="40" class="form-control">@Model.PageDetails</textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Page Number Display</label>
                <div class="col-md-10">
                    <input name="PageNumberDisplay" type="text" value="@Model.PageNumberDisplay" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Page Tag</label>
                <div class="col-md-10">
                    <input name="PageTag" type="text" value="@Model.PageTag" class="form-control" />
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
   
}

