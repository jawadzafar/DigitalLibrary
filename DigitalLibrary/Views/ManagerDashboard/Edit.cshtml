
@model DigitalLibrary.Models.Users
@{
    Layout = "~/Views/Shared/_ManagerDashoardPartial.cshtml";
}
<section class="content">
    @using (Html.BeginForm("Edit", "ManagerDashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2 control-label">User Name</label>
            <input type="hidden" class="form-control" value="@Model.Id" name="Id" />
            <div class="col-md-5">
                <input type="text" class="form-control" value="@Model.Name" name="Name" />
            </div>
        </div>
        <div class="form-group">

            <label class="col-md-2 control-label">EmailAddress</label>

            <div class="col-md-5">
                <input type="text" class="form-control" value="@Model.EmailAddress" name="EmailAddress" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Password</label>

            <div class="col-md-5">
                <input type="password" class="form-control" value="@Model.Password" name="Password" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">User Phone</label>

            <div class="col-md-5">
                <input type="text" class="form-control" value="@Model.UserPhone" name="UserPhone" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Location</label>

            <div class="col-md-5">
                <input type="text" class="form-control" name="Location" value="@Model.Location" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Role</label>
            <div class="col-md-5 ">
                <select name="Role" class="form-control">
                    @*<option @((Model.Role == "manager") ? "selected" : "") value="manager">Manager</option>*@
                    <option @((Model.Role == "user") ? "selected" : "") value="user">User</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Update" />
            </div>
        </div>
    }
</section>