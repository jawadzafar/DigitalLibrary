@model  List<Dictionary<string, string>>

@{
    ViewBag.Title = "Index Search";
}

<h2>Search</h2>

<h2>Words Search</h2>
@using (Html.BeginForm(Html.BeginForm("IndexSearch", "Search", FormMethod.Post)))
            {
    <div class="panel panel-heading">Word Search</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="form-horizontal">
                                @Html.TextBox("SearchText", null, htmlAttributes: new { @class = "form-control" })
                                <input type="submit" value="Search" name="submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
}

@if (IsPost)
            {
    <table class="table table-responsive">
        <tr>
            <th>Book Name</th>
            <th>Baab Name</th>
            <th>Page Name</th>
            <th>Page Number Display</th>
            <th>Pages Details</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item["BookName"]
                </td>
                <td>
                    @item["BaabName"]
                </td>
                <td>
                    @item["PageTag"]
                </td>
                <td>
                    @item["PageNumberDisplay"]
                </td>
                <td>
                    @item["PageDetails"]
                </td>
            </tr>
        }
