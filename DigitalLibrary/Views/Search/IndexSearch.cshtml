    <table class="table table-responsive">
        <tr>
            <th>Book Name</th>
            <th>Baab Name</th>
            <th>Page Name</th>
            <th>Page Number Display</th>
            <th>Pages Details</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    
                    <a href="~/Books/Details/@item["BookId"]">@item["BookName"]</a>
                </td>
                <td>
                    @item["BaabName"]
                </td>
                <td>
                    @item["PageTag"]
                </td>
                <td>
                    @item["PageNumberDisplay"]
                </td>
                <td>
                    @item["PageDetails"]
                </td>
            </tr>
        }
